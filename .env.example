# AI Agent Framework - Environment Variables
# Copy this file to .env and fill in your values

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Default LLM Configuration
AI_AGENT_LLM_DEFAULT_PROVIDER=claude
AI_AGENT_LLM_DEFAULT_MODEL=claude-3-7-sonnet-20250219
AI_AGENT_LLM_TEMPERATURE=0.7
AI_AGENT_LLM_MAX_TOKENS=1000

# Agent Configuration
AI_AGENT_MAX_ITERATIONS=10
AI_AGENT_VERBOSE=false

# Tool Permissions
AI_AGENT_TOOLS_ENABLE_FILESYSTEM=false
AI_AGENT_TOOLS_FILESYSTEM_ALLOW_WRITE=false
AI_AGENT_TOOLS_FILESYSTEM_ALLOWED_DIRECTORIES=./data
AI_AGENT_TOOLS_ENABLE_WEB_ACCESS=false
AI_AGENT_TOOLS_WEB_ALLOWED_DOMAINS=wikipedia.org,github.com

# Web Search Configuration (if enabled)
SERPER_API_KEY=your_serper_api_key_here
GOOGLE_SEARCH_API_KEY=your_google_api_key_here

# Logging
AI_AGENT_LOGGING_LEVEL=INFO
AI_AGENT_LOGGING_FILE=logs/agent.log

# Memory Configuration
AI_AGENT_MEMORY_MAX_MESSAGES=100
AI_AGENT_MEMORY_INCLUDE_TIMESTAMPS=true